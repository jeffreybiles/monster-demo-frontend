<div class="container">
  <div class="row">
    <div class="pull-right">
      {{#link-to 'checkout'}}
        {{fa-icon 'shopping-cart'}} Items in cart: {{cart.itemCount}}
      {{/link-to}}
      &nbsp;&nbsp;&nbsp;
      {{#if session.currentUser}}
        <span {{action 'logout'}} style="cursor: pointer;">Logout {{session.currentUser.email}}</span>
      {{else}}
        {{#link-to 'login'}}Login{{/link-to}}
        {{#link-to 'register'}}Register{{/link-to}}
      {{/if}}
    </div>
    {{link-to 'Monsters' 'monsters'}}
    {{link-to '(peek)' 'monsters-peek'}}
    {{link-to 'About' 'about'}}
    {{link-to 'Authenticated' 'authenticated'}}
  </div>
  <div class="flash-messages">
    {{#each flashMessages.queue as |flash|}}
      {{flash-message flash=flash}}
    {{/each}}
  </div>

  {{outlet}}
</div>
