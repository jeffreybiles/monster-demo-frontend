<div class="cart">
  {{#each cart.monsters as |monster|}}
    <div class="cart-item">
      <div class="image">
        <img src={{monster.imageUrl}} />
      </div>
      <div class="details">
        {{monster.name}}
        <br>
        ${{monster.price}}
      </div>
      <button {{action 'removeItem' monster.id}}>Remove</button>
    </div>
  {{/each}}
  <button {{action 'clear'}}>Clear Cart</button>
  <hr>
  Total: ${{cart.total}}
</div>
{{stripe-checkout
  name="Cute Monsters Inc."
  description="Buy cute monster plushies."
  amount=cart.centsTotal
  action="processStripeToken"
}}
