<div class="monster-card {{if model.onTeam 'taken'}}">
  <span class="name">{{model.name}}</span>
  <span class="pull-right">Level: {{model.level}}</span>

  <img src={{model.imageUrl}} />
  <br>
  {{price price=model.price}}
</div>
<br>
{{#if (contains model.id cart.monsterIds.content)}}
  <button class="btn">
    Sold Out
  </button>
{{else}}
  <button class="btn" {{action 'buyItem'}}>
    Buy Plushy
  </button>
{{/if}}
{{#if model.onTeam}}
  <button class="btn" {{action 'remove'}} style="color: red;">
    Remove from team
  </button>
{{else}}
  <button class="btn" {{action 'add'}}>
    Add to team
  </button>
{{/if}}
{{#link-to 'monsters.monster.edit' class="btn" tagName="button"}}
  Edit
{{/link-to}}
{{outlet}}
