<h2 id="title">Monster Cards</h2>

<div class="row">
  <div class="col-sm-5 col-xs-6">
    <ul class="monsters list-unstyled">
      {{#each model as |monster|}}
        {{#link-to 'monsters.monster' monster}}
          <li class="monster col-sm-4 col-xs-6 {{if monster.onTeam 'taken'}}">
            {{monster.name}}, level {{monster.level}}
            <br>
            <img src={{monster.imageUrl}} />
            <br>
            {{price monster.price}}
          </li>
        {{/link-to}}
      {{/each}}
    </ul>
  </div>
  <div class="col-sm-7 col-xs-6">
    {{outlet}}
    {{team-lineup}}
  </div>
</div>
